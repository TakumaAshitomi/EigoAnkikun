<MainScreen>:
    englishword: englishword
    translatedword: translatedword
    BoxLayout:
        orientation: "vertical"
        size: root.size
        BoxLayout:
            size_hint_y: 0.2
            Button:
                id: listbutton
                text: "WordList"
                on_press: root.manager.current = 'sub'
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                Label:
                    id: label1
                    font_size: 40
                    text: "English word"
                TextInput:
                    id: englishword
                    font_size: 20
            BoxLayout:
                Label:
                    id: label2
                    font_size: 40
                    text: "Trasrated word"
                TextInput:
                    id: translatedword
            Button:
                id: button1
                text: "Save"
                size_hint_y: 0.5
                on_press: root.save_button()
<ListButton>:
    
<ListScreen>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: 0.2
            Button:
                id: Back
                text: "Back to main menu"
                font_size: 35
                on_press: root.manager.current = 'main'
            Button:
                id: Quiz
                text: "Quiz"
                font_size: 35
        RecycleView:
            viewclass: 'Button'
            data: [{'text': str(x)} for x in root.data_items]
            RecycleGridLayout:
                cols: 2
                default_size: None, dp(26)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                multiselect: True
                touch_multiselect: True